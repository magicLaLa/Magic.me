$accentExtendsColor = #666BAD

.custom-home-class .home-blog .description {
  display: none;
}

.theme-container .site-name {
  display:  none;
}

.home-blog {
  .hero {
    padding: 0 !important;
    .hero-img {
      max-width: none !important;
      position: absolute !important;
      top: 0;
      left: 0;
      object-fit: cover;
    }
    h1 {
      font-size: 1.5rem !important;
      color: #fff;
    }
  }
}

@media (max-width: 719px) {
  .home-blog {
    .hero {
      .hero-img {
        max-height: none !important;
      }
    }
    .home-blog-wrapper {
      .info-wrapper {
        margin-left: 0;
        margin-top: 20px;
      }
    }
  }
}

//滚动条样式
::-webkit-scrollbar
  width: 6px !important;
/*滚动条的设置*/
::-webkit-scrollbar-thumb {
	background-color: $accentColor !important;
	background-clip: padding-box !important;
}
/*滚动条凹槽的颜色，还可以设置边框属性 */
::-webkit-scrollbar-track-piece {
	background-color:transparent !important;
	-webkit-border-radius: 0em !important;
	-moz-border-radius: 0em !important;
	border-radius: 0em !important;
}
/*滚动条鼠标移上去*/
::-webkit-scrollbar-thumb:hover {
	background-color: $accentExtendsColor !important;
}

.info-wrapper:hover {
  box-shadow: 0 2px 16px 0 rgba(102,107,173, 0.3) !important;
}

.abstract-wrapper {
  .abstract-item {
    position: relative;
    &:hover {
      box-shadow: 0 2px 16px 0 rgba(102,107,173, 0.3) !important;
      &::before {
        position: absolute;
        content: '';
        left: 0; top: 0; right: 0; bottom: 0;
        border: 2px solid $accentExtendsColor;
        animation: borderAround 2s infinite linear;
      }
    }
  }
}

@keyframes borderAround {
  0%, 100% { clip-path: inset(0 65% 40% 0); }
  25% { clip-path: inset(0 0 40% 35%); }
  50% { clip-path: inset(60% 0 0 65%); }
  75% { clip-path: inset(60% 35% 0 0); }
}

.page {
  .abstract-box {
    display:  none;
  }
  .page-title {
    background-image: url('/bg/home-bg.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    .title {
      color: #fff;
    }
    .iconfont {
      color: #fff;
    }
    span {
      color: #fff;
    }
  }
}

.sidebar {
  font-size: 0.67em !important;
}